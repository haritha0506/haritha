
# include<stdio.h>
void addition(int a,int b){
    printf(" addition %d",a+b);
}
void subraction(int a,int b){
    printf("subraction %d",a-b);   
}
void multiplication(int a,int b){
    printf("multiplication %d",a*b);
}
void division(int a,int b ){
    printf(" division %d",a/b);
}
void main()
{
    printf("1. addition\n");
    printf("2. substraction\n");
    printf("3. multiplication\n");
    printf("4. division\n");
    int choice;
    printf(" choose a number");
    scanf("%d",&choice);
    int a,b;
    printf("enter two numbers");
    scanf("%d%d",&a,&b);
    switch(choice){
    {
        case 1:
           addition(a,b);
           break;
        case 2:
           subraction(a,b);
           break;
        case 3:
           multiplication(a,b);
           break;
        case 4:
           division(a,b);
           break;
        default:
             printf("the choice is wrong");
             break;
    }   
}
}
